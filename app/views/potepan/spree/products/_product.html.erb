<div class="<%= location == :categories ? 'col-sm-4' : 'col-md-3 col-sm-6' %> col-xs-12">
  <div class="productBox">
    <div class="productImage clearfix">
      <%= link_to image_tag(product.images.empty? ? Spree::Image.new.url(:product) : product.images.first.url(:product),
                            alt: 'products-img'),
                  potepan_product_path(product.id) %>
    </div>
    <div class="productCaption clearfix">
      <%= link_to potepan_product_path(product.id) do %>
        <h5><%= product.name %></h5>
      <% end %>
      <h3><%= product.price.round %>å††</h3>
    </div>
  </div>
</div>