<% if carousel_type == :large %>

  <div class="item <%= "active" if image_counter == 0 %>" data-thumb=<% image_counter %>>
    <% image_tag(image.url(:large)) %>
  </div>

<% else %>

  <div data-target="#carousel" data-slide-to=<% image_counter %> class="thumb"><% image_tag(image.url(:small)) %></div>

<% end %>