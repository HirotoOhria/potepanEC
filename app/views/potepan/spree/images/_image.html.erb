<% if carousel_type == :large %>

  <% if image_counter == 0 %>

    <div class="item active" data-thumb="<%= image_counter %>">
      <%= image_tag(image.url(:large)) %>
    </div>

  <% else %>

    <div class="item" data-thumb="<%= image_counter %>">
      <%= image_tag(image.url(:large)) %>
    </div>

  <% end %>

<% else %>

  <div data-target="#carousel" data-slide-to="<% image_counter %>" class="thumb">
    <%= image_tag(image.url(:small)) %>
  </div>

<% end %>