<% provide(:title, @taxon.name) %>

<%= render 'potepan/shared/light_section', show_object: @taxon %>
<!-- MAIN CONTENT SECTION -->
<section class="mainContent clearfix productsContent">
  <div class="container">
    <div class="row">
      <div class="col-md-3 col-sm-4 col-xs-12 sideBar">
        <%= render 'panel_nest', panel_name: '商品カテゴリー', panel_items: Spree::Taxonomy.all %>
        <%= render 'panel',      panel_name: '色から探す',     panel_items: take_option_values('color') %>
        <%= render 'panel',      panel_name: 'サイズから探す',  panel_items: take_option_values('size') %>
      </div>
      <div class="col-md-9 col-sm-8 col-xs-12">
        <%= render 'filter_area' %>
        <div class="row">
          <%= render @products %>
        </div>
      </div>
    </div>
  </div>
</section>

<%= render 'category_light_section' %>