<div class="col-sm-4 col-xs-12">
  <div class="productBox">
    <div class="productImage clearfix">
      <%= link_to image_tag(product.main_image.url(:product), alt: 'product-img',  id: product.main_image.id), potepan_product_path(product.id) %>
    </div>
    <div class="productCaption clearfix">
      <%= link_to potepan_product_path(product.id) do %>
        <h5><%= product.name %></h5>
      <% end %>
      <h3><%= product_price(product) %></h3>
    </div>
  </div>
</div>