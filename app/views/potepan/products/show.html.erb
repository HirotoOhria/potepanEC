<% provide(:title, @product.name) %>
<%= render 'potepan/shared/light_section', show_name: @product.name %>

<!-- MAIN CONTENT SECTION -->
<section class="mainContent clearfix">
  <div class="container">
    <div class="row singleProduct">
      <div class="col-xs-12">
        <div class="media">
          <div class="media-left productSlider">
            <div id="carousel" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <%= render partial: 'potepan/shared/image', collection: @product.show_images, locals: { image_style: :large } %>
              </div>
            </div>
            <div class="clearfix">
              <div id="thumbcarousel" class="carousel slide" data-interval="false">
                <div class="carousel-inner">
                  <%= render partial: 'potepan/shared/image', collection: @product.show_images, locals: { image_style: :small } %>
                </div>
                <a class="left carousel-control" href="#thumbcarousel" role="button" data-slide="prev">
                  <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control" href="#thumbcarousel" role="button" data-slide="next">
                  <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
              </div>
            </div>
          </div>
          <div class="media-body">
            <ul class="list-inline">
              <%= link_to product_to_category_path(@product) do %>
                <i class="fa fa-reply" aria-hidden="true"></i>一覧ページへ戻る
              <% end %>
              </li>
            </ul>
            <h2><%= @product.name %></h2>
            <h3><%= product_price(@product) %></h3>
            <p><%= @product.description %><p>
            <span class="quick-drop">
              <select name="guiest_id3" id="guiest_id3" class="select-drop">
                <option value="0">S</option>
                <option value="1">M</option>
                <option value="2">L</option>
                <option value="3">XL</option>
              </select>
            </span>
            <span class="quick-drop resizeWidth">
              <select name="guiest_id4" id="guiest_id4" class="select-drop">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
              </select>
            </span>
            <div class="btn-area">
              <%= link_to potepan_cart_page_path, class: 'btn btn-primary btn-block' do %>
                カートへ入れる<i class="fa fa-angle-right" aria-hidden="true"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row productsContent">
      <div class="col-xs-12">
        <div class="page-header">
          <h4>関連商品</h4>
        </div>
      </div>
      <%= render partial: 'product', collection: @relation_products %>
    </div>
  </div>
</section>
