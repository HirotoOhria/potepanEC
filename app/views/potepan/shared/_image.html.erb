<% if image_style == :large %>
  <div class="item <%= 'active' if image_counter == 0 %>" data-thumb="<%= image_counter %>">
    <%= image_tag(image.url(:large), alt: 'product-img', id: "large_image_#{image.id}") %>
  </div>
<% else %>
  <div data-target="#carousel" data-slide-to="<%= image_counter %>" class="thumb">
    <%= image_tag(image.url(:small), alt: 'product-img', id: "small_image_#{image.id}") %>
  </div>
<% end %>